{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "isolatedModules": true,
    "types": ["vite/client"]
  },
  "include": ["src", "vite-env.d.ts"]
}